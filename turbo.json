{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalDotEnv": [".env"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {},
    "dev": {
      "cache": false,
      "persistent": true,
      "env": ["NEXT_PUBLIC_*", "!NEXT_PUBLIC_GIT_*"],
      "dotEnv": [".env.development.local", ".env.local", ".env.development", ".env"]
    }
  }
}
